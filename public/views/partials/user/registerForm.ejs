<div class=" d-flex mt-3 w-100 justify-content-center">
  <div class="d-none d-md-block w-50  borderLeft bgSecondColor"></div>
  <form class="d-flex px-5 py-5 borderRight flex-column justify-content-center bgWhite  ">
    <h2 class="mx-3 firstColor">Regístrate</h2>
    <p class="mx-3">no te arrepentirás...</p>
    <div class="mb-1 mx-3 text-danger" id="registerMessage"></div>
    <div class="form-group py-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputNombre">Nombre:</label>
      <input type="text" class="border-0 pt-2 border-bottom form-control" id="registerInputNombre" aria-describedby="emailHelp"
        placeholder="Ingrese su nombre">
    </div>
    <div class="form-group py-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputApellido">Apellido:</label>
      <input type="text" class="border-0 pt-2 border-bottom form-control" id="registerInputApellido" aria-describedby="emailHelp"
        placeholder="Ingrese su apellido">
    </div>
    <div class="form-group py-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputDireccion">Dirección:</label>
      <input type="text" class="border-0 pt-2 border-bottom form-control" id="registerInputDireccion" aria-describedby="emailHelp"
        placeholder="Ingrese su direccion">
    </div>
    <div class="form-group py-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputTelefono">Telefono</label>
      <input type="text" class="border-0 pt-2 border-bottom form-control" id="registerInputTelefono" aria-describedby="emailHelp"
        placeholder="Ingrese su telefono">
    </div>
    <div class="form-check pt-3 pb-2 mx-3">
      <input class="form-check-input" type="radio" name="isAdmin" id="checkedClient" value="0" checked>
      <label class="form-check-label" for="checkedClient" >
        Quiero comprar
      </label>
    </div>
    <div class="form-check pb-3 mx-3">
      <input class="form-check-input" type="radio" name="isAdmin" id="checkedAdmin" value="1">
      <label class="form-check-label" for="checkedAdmin">
        Quiero vender
      </label>
    </div>
    <div id="nombreTienda" class="d-none form-group pb-3 mx-3">
      <label class="fontBold fontUpper" for="inputNombreTienda">Nombre de la tienda:</label>
      <input type="text" class="border-0 pt-2 border-bottom form-control" id="inputNombreTienda" aria-describedby="emailHelp"
        placeholder="Ingrese el nombre de la tienda">
    </div>
    <div class="form-group pb-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputPassword">Contraseña:</label>
      <input type="password" class="border-0 pt-2 border-bottom form-control" id="registerInputPassword" placeholder="*********">
    </div>
    <div class="form-group pb-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputRePassword">Repetir Contraseña:</label>
      <input type="password" class="border-0 pt-2 border-bottom form-control" id="registerInputRePassword" placeholder="*********">
    </div>
    <div class="form-group py-3 mx-3">
      <label class="fontBold fontUpper" for="registerInputEmail">Correo:</label>
      <input type="email" class="border-0 pt-2 border-bottom form-control" id="registerInputEmail" aria-describedby="emailHelp"
        placeholder="Ingrese su correo">
    </div>
    
    <button type="submit" id="registerButton" class="btn text-white fontBold mx-3 mb-4 bgFirstColor border-0 rounded">Registrar</button>
    <p class="text-center">Ya tienes una cuenta?</p>
    <a href="/login"  class="text-center firstColor font-weight-bold">Ingresa aquí!</a>

  </form>
</div>